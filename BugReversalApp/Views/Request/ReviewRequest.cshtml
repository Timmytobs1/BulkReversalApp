@model BugReversalApp.Models.Entities.Request
<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body style="font-size:1.5rem">
    <form asp-action="ApproveRequest" asp-controller="request" method="post">

        Request Id: @Model.Id<br />
        Transaction Id: @Model.TransactionId<br />
        User Id: @Model.UserId<br />
       
        <input type="checkbox" asp-for="Approved" name="Approved" value=true class="form-check form-check-inline bg-primary w-3" /><br />
        <i>Note that if you do not tick this box, you have automatically declined the request</i><br />
        <button class="btn btn-outline-primary" type="submit">Submit</button>
    </form>
</body>
</html>

